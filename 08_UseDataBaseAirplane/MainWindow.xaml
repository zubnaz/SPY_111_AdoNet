<Window x:Class="_08_UseDataBaseAirplane.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08_UseDataBaseAirplane"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Click="Button_Click">Load Flights</Button>
            <Button Click="Button_Click_1">Load Clients</Button>
            <Button Click="Button_Click_2">Load Airplanes</Button>
        </ToolBar>
        <DataGrid x:Name="dataGrid"></DataGrid>
    </DockPanel>
</Window>
